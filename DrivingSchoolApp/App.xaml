<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="DrivingSchoolApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DrivingSchoolApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="labelNameStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Small" />
            </Style>
            <Style x:Key="labelErrorStyle" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="End" />
                <!--<Setter Property="TextColor" Value="{StaticResource MainColor}" />-->
                <Setter Property="TextColor" Value="Red" />
                <Setter Property="FontSize" Value="Small" />
            </Style>
            <Style x:Key="entryStyle" TargetType="Entry">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="BackgroundColor" Value="PowderBlue" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="10" />
                <!--<Setter Property="BackgroundColor" Value="{StaticResource MainColor}" />-->
                <!--<Setter Property="BorderColor" Value="{StaticResource MainColor}" />-->
            </Style>
            <Style x:Key="CancelbuttonStyle" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="BackgroundColor" Value="Black" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="5" />
                <!--<Setter Property="BackgroundColor" Value="{StaticResource MainColor}" />-->
                <!--<Setter Property="BorderColor" Value="{StaticResource MainColor}" />-->
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>
