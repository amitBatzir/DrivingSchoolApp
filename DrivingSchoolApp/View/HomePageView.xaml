<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lottie="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="DrivingSchoolApp.View.HomePageView"
             Title="HomePageView"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Car animation at the top -->
        <lottie:LottieAnimationView 
            x:Name="CarAnimation"
            HeightRequest="150"
            AutoPlay="True"
            Loop="True"
            Animation="car_animation.json" />

        <!-- Scrollable questions in the middle -->
        <ScrollView Orientation="Horizontal" HeightRequest="200">
            <HorizontalStackLayout Spacing="15">
                <Frame BackgroundColor="#f0f0f0" Padding="15" CornerRadius="10">
                    <Label Text="How many lessons do I need?" FontSize="16" />
                </Frame>
                <Frame BackgroundColor="#f0f0f0" Padding="15" CornerRadius="10">
                    <Label Text="How much does a lesson cost?" FontSize="16" />
                </Frame>
                <Frame BackgroundColor="#f0f0f0" Padding="15" CornerRadius="10">
                    <Label Text="What do I need to bring to my first lesson?" FontSize="16" />
                </Frame>
                <Frame BackgroundColor="#f0f0f0" Padding="15" CornerRadius="10">
                    <Label Text="Can I choose my instructor?" FontSize="16" />
                </Frame>
                <!-- Add more questions if you'd like -->
            </HorizontalStackLayout>
        </ScrollView>

    </VerticalStackLayout>

</ContentPage>
