<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrivingSchoolApp.View.PackagesView"
             Title="חבילות תשלום"
             Padding="15"
             BackgroundColor="PowderBlue"
             FlowDirection="RightToLeft">

    <VerticalStackLayout Spacing="20">

        <!-- 🧾 Header Label Without Border -->
        <Label
            Text="חבילות תשלום"
            FontAttributes="Bold"
            FontSize="26"
            TextColor="#1F2D3D"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Margin="0,10" />

        <!-- 📦 Package List -->
        <CollectionView
            Margin="0,10,0,0"
            ItemsSource="{Binding Packages}"
            SelectionMode="Single" BindingContext="SelectedPackage">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,8"
                        Padding="20"
                        BackgroundColor="#FFFFFF"
                        BorderColor="#E0E0E0"
                        CornerRadius="12"
                        HasShadow="True">

                        <VerticalStackLayout Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="{Binding PackageTitle}"
                                TextColor="#2C3E50"
                                HorizontalTextAlignment="Center" />

                            <Label
                                FontSize="15"
                                Text="{Binding PackageText}"
                                TextColor="#566573"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
