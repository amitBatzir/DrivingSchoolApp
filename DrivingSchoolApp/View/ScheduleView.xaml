<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DrivingSchoolApp.View.ScheduleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cal="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
    x:Name="ThePage"
    Title="Schedule">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20"
            BackgroundColor="#F7F7F7">

            <!-- Calendar Control -->
            <Frame
                HasShadow="True"
                CornerRadius="10"
                Padding="10"
                BackgroundColor="White">
                <cal:Calendar
                    CalendarSectionShown="True"
                    Events="{Binding Events}"
                    EventsScrollViewVisible="True"
                    SelectedDayBackgroundColor="#FF6B6B"
                    TodayOutlineColor="#FF6B6B"
                    BackgroundColor="Transparent">
                    <cal:Calendar.EventTemplate>
                        <DataTemplate>
                            <!-- Event Card -->
                            <Frame
                                Margin="5"
                                Padding="10"
                                BackgroundColor="#FFF"
                                BorderColor="#E0E0E0"
                                CornerRadius="8"
                                HasShadow="True">
                                <VerticalStackLayout Spacing="6">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        Text="{Binding Student.FullName}"
                                        TextColor="#333" />
                                    <Button
                                        IsVisible="{Binding IsPending}"
                                        Text="Approve"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        CornerRadius="20"
                                        FontSize="14"
                                        HeightRequest="35"
                                        HorizontalOptions="Start" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </cal:Calendar.EventTemplate>
                </cal:Calendar>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
