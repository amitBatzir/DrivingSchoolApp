<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DrivingSchoolApp.View.ScheduleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cal="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
    x:Name="ThePage"
    Title="ScheduleView">
    <VerticalStackLayout>
        <cal:Calendar
            CalendarSectionShown="True"
            Events="{Binding Events}"
            EventsScrollViewVisible="True"
            SelectedDayBackgroundColor="Red">
            <cal:Calendar.EventTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Button
                            Command="{Binding BindingContext.GoToProfoleCommand, Source={x:Reference Name=ThePage}}"
                            IsVisible="{Binding IsPending}"
                            Text="Approve" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            Text="{Binding Student.FullName}"
                            TextColor="Black" />
                        <Label Text="{Binding Description}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </cal:Calendar.EventTemplate>
        </cal:Calendar>

    </VerticalStackLayout>
</ContentPage>