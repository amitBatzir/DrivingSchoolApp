<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DrivingSchoolApp.View.StudentListView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="DrivingSchoolApp.ViewModels"
    xmlns:viewmodels="clr-namespace:DrivingSchoolApp.ViewModels"
    Title="רשימת תלמידים"
    Padding="15"
    FlowDirection="RightToLeft"
    BackgroundColor="PowderBlue"
    x:Name="ThePage">

    <VerticalStackLayout Spacing="20">

        <!-- 🧾 Headline Section -->
        <Frame BackgroundColor="#ffffff"
               BorderColor="White"
               CornerRadius="12"
               Padding="15"
               HasShadow="True">

            <HorizontalStackLayout Spacing="10">
                <Label Text="מספר התלמידים בבית הספר:"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       VerticalOptions="Center" />

                <Label Text="{Binding Students.Count}"
                       FontSize="18"
                       TextColor="#34495E"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Frame>

        <!--  Student List  -->
        <CollectionView
            Margin="0,10,0,0"
            ItemsSource="{Binding Students}"
            SelectionMode="None">
            <!--  Disable built-in selection  -->

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,5"
                        Padding="15"
                        BackgroundColor="White"
                        BorderColor="White"
                        CornerRadius="10"
                        HasShadow="True">

                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

                            <Label
                                FontAttributes="Bold"
                                FontSize="15"
                                HorizontalOptions="StartAndExpand"
                                Text="{Binding FullName}"
                                TextColor="#2E4053"
                                VerticalOptions="Center" />

                            <Button
                                Padding="10,2"
                                BackgroundColor="#2980B9"
                                Command="{Binding BindingContext.GoToProfileCommand, Source={x:Reference Name=ThePage}}"
                                CommandParameter="{Binding .}"
                                CornerRadius="10"
                                FontSize="12"
                                Text="לפרופיל"
                                TextColor="White" />
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>





