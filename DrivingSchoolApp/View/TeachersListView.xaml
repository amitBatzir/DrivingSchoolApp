<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DrivingSchoolApp.View.TeachersListView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="רשימת מורים"
    Padding="15"
    FlowDirection="RightToLeft"
      BackgroundColor="PowderBlue">

    <VerticalStackLayout Spacing="20">

        <!-- 🧾 Headline Section -->
        <Frame BackgroundColor="#ffffff"
               BorderColor="White"
               CornerRadius="12"
               Padding="15"
               HasShadow="True">

            <HorizontalStackLayout Spacing="10">
                <Label Text="מספר המורים בבית הספר:"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       VerticalOptions="Center" />

                <Label Text="{Binding Teachers.Count}"
                       FontSize="18"
                       TextColor="#34495E"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Frame>

        <!-- 👦 Students List -->
        <CollectionView
            Margin="0,10,0,0"
            ItemsSource="{Binding Teachers}"
            SelectedItem="{Binding SelectedTeacher}"
            SelectionMode="Single">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                           Margin="0,5"
                           CornerRadius="10"
                           HasShadow="True"
                           BackgroundColor="White"
                           BorderColor="White">
                        <VerticalStackLayout>
                            <Label Text="{Binding FullName}"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="#2E4053" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>


