<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DrivingSchoolApp.View.TeachersListView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="TeachersListPage"
    Title="专砖转 专"
    Padding="15"
    BackgroundColor="PowderBlue"
    FlowDirection="RightToLeft">

    <VerticalStackLayout Spacing="20">

        <!--  Ь Headline Section  -->
        <Frame
            Padding="15"
            BackgroundColor="#ffffff"
            BorderColor="White"
            CornerRadius="12"
            HasShadow="True">

            <HorizontalStackLayout Spacing="10">
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="住驻专 专 转 住驻专:"
                    TextColor="#2C3E50"
                    VerticalOptions="Center" />

                <Label
                    FontSize="18"
                    Text="{Binding Teachers.Count}"
                    TextColor="#34495E"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Frame>

        <!--  Teachers List  -->
        <CollectionView
            Margin="0,10,0,0"
            ItemsSource="{Binding Teachers}"
            SelectionMode="None">
            <!--  Disable built-in selection  -->

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,5"
                        Padding="15"
                        BackgroundColor="White"
                        BorderColor="White"
                        CornerRadius="10"
                        HasShadow="True">

                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

                            <Label
                                FontAttributes="Bold"
                                FontSize="15"
                                HorizontalOptions="StartAndExpand"
                                Text="{Binding FullName}"
                                TextColor="#2E4053"
                                VerticalOptions="Center" />

                            <Button
                                Padding="10,2"
                                BackgroundColor="#2980B9"
                                Command="{Binding BindingContext.GoToProfileCommand, Source={x:Reference Name=TeachersListPage}}"
                                CommandParameter="{Binding .}"
                                CornerRadius="10"
                                FontSize="12"
                                Text="驻专驻"
                                TextColor="White" />
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
